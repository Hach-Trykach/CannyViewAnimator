<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.livetyping.cannyviewanimator.MainActivity">

    <TextView
        android:id="@+id/main_activity_start_custom"
        style="@style/Widget.AppCompat.Button.Borderless.Colored.MainActivityButton"
        android:text="@string/main_custom_example"/>

    <TextView
        android:id="@+id/main_activity_start_xml"
        style="@style/Widget.AppCompat.Button.Borderless.Colored.MainActivityButton"
        android:text="@string/main_xml_example"/>

    <TextView
        android:id="@+id/main_activity_start_transition"
        style="@style/Widget.AppCompat.Button.Borderless.Colored.MainActivityButton"
        android:text="@string/main_transition_example"/>

    <TextView
        android:id="@+id/main_activity_start_choose"
        style="@style/Widget.AppCompat.Button.Borderless.Colored.MainActivityButton"
        android:text="@string/main_choose_your_animation"/>
</LinearLayout>
